---
export interface Props {
	title: string;
}

const {frontmatter, title} = Astro.props;

import NavBar from '../components/ui/NavBar'
import Footer from '../components/ui/Footer'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/css/style.css">
		<title>{frontmatter.title}</title>
	</head>
	<body>
    <NavBar />
    <main class="mt-4 mb-4 px-5 mx-auto max-w-[50rem]">
      <article class="prose mx-auto max-w-[50rem]">
        <h1
          class="mt-10 text-center text-5xl font-roboto font-bold"
        >
          {frontmatter.title}
        </h1>
        <img src={frontmatter.featuredImage} alt={frontmatter.title} />
        <slot />
      </article>
    </main>
    <Footer />
	</body>
</html>
